<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mm_card_width"
    android:layout_height="@dimen/mm_card_height" >

    <ImageView
        android:id="@+id/card_cloak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/mmg_card_cloak_blue_dark" />

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/mm_inner_item_padding"
        android:scaleType="centerInside"
        android:src="@drawable/mmg_card_balloon" />

    <View
        android:id="@+id/card_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/red_dark"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/mm_door_item_padding_bottom"
        android:layout_marginLeft="@dimen/mm_door_item_padding"
        android:layout_marginRight="@dimen/mm_door_item_padding"
        android:layout_marginTop="@dimen/mm_door_item_padding_top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/card_pane_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/mmg_pane_left" />

        <ImageView
            android:id="@+id/card_pane_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/mmg_pane_right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/card_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:src="@drawable/mmg_card_frame" />

    <ImageView
        android:id="@+id/card_locked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:src="@drawable/mmg_card_locked" />

</FrameLayout>
