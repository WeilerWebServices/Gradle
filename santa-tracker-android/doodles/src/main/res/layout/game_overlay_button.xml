<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/game_overlay_button_width"
  android:layout_height="wrap_content"
  android:layout_marginTop="@dimen/game_overlay_vertical_margin"
  android:layout_marginBottom="@dimen/game_overlay_vertical_margin">
  <ImageView
    android:layout_width="@dimen/game_overlay_image_size"
    android:layout_height="@dimen/game_overlay_image_size"
    android:id="@+id/game_overlay_button_image"
    android:layout_centerHorizontal="true"
    android:padding="@dimen/game_overlay_image_padding"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"/>
  <TextView
    android:layout_width="@dimen/game_overlay_button_width"
    android:layout_height="wrap_content"
    android:text="Button Text"
    android:textSize="@dimen/game_overlay_text_size"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:gravity="center_horizontal"
    android:id="@+id/game_overlay_button_description"
    android:layout_below="@id/game_overlay_button_image"
    android:layout_centerHorizontal="true"
    android:textAlignment="center"/>
</RelativeLayout>
